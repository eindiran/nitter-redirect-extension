{
    "name": "Nitter Redirect",
    "description": "Redirect Twitter links to nitter.net",
    "manifest_version": 1,
    "version": "1.0.0",
    "background": {
        "scripts":[
            "background.js"
        ]
    },
    "icons": {
        "48": "icon/icon48-enabled.png",
        "128": "icon/icon128-enabled.png"
    },
    "permissions": [
        "webRequest",
        "webRequestBlocking",
        "*://twitter.com/*",
        "*://www.twitter.com/*",
        "*://mobile.twitter.com/*"
    ],
    "browser_action": {
        "default_title": "Nitter Redirect",
        "default_icon": {
            "48": "icon/icon48-enabled.png",
            "128": "icon/icon128-enabled.png"
        }
    }
}
